*{
    font-family: "Share Tech", sans-serif;
    font-style: normal;
    font-size: x-large;
    color: <% opt.style.dark_text %>;
}

body{
    background-color: <% opt.style.white_background %>; 
    display: flex;
    flex-direction: column;
    align-items: center;
    word-wrap: break-word;
    padding: 0px 2.5%;
}

img {
    height: 360px;
    width: 480px;
}

hr, b, .subtitle {
    color: <% opt.style.sub_text %>;
}

h1 {
    font-weight: 900;
    font-size: 2.5rem;
    line-height: 1.1;
}

h2 {
    font-size: 1.75rem;
}

a {
    color: <% opt.style.blue %>;
}

sup {
    color: <% opt.style.blue %>
}

h1, h2, h3 {
    margin-block-start: 0.25em;
    margin-block-end: 0.25em;
}


.header {
    width: 100%;
    align-items: flex-start;
    padding: 25px 25px;
    border-bottom: solid;
    border-bottom-width: thin;
    border-color: <% opt.style.sub_text %>;
}

.menu {
    background: <% opt.style.white_menu_background %>;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 40px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    transition: opacity 0.3s ease;
    opacity: 0;
}

.menu:hover {
    opacity: 1;
}

.menu a {
    color: <% opt.style.dark_text %>;
    text-decoration: none;
    padding-left: 15px;
    padding-right: 15px;
}

.menu a:hover {
    text-decoration: underline;
    color: <% opt.style.blue %>;
}

.main {
    display: flex;
    flex-direction: row;
}

.article, .project {
    transition: 1s ease;
    padding: 5px;
    border-radius: 10px;
}

project p {
    color: #AAAAAA;
    text-decoration: none;
}

.article a {
    text-decoration: none;
}

.article:hover, .project:hover {
    background: <% opt.style.white_sub_background %>;
}

.article_title {
    padding-bottom: 15px;
    margin-bottom: 15px;
    border-bottom: solid <% opt.style.sub_text %> 2px;
}

.article_footer {
    padding-bottom: 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.content {
    max-width: 60%;
    padding: 40px 25px;
    align-self: start;
}

.articles {
    clear: both;
    float: left;
    width: 60%;
    padding: 40px 25px;
    align-self: start;
    display: flex;
    flex-direction: column;
}

.projects {
    float: left;
    width: 30%;
    padding: 40px 25px;
    align-self: start;
    display: flex;
    flex-direction: column;
}

a.articles , p.projects {
    text-decoration: none;
}

.blinking {
    display: none;
    animation: blink 4s linear infinite;
}

.code {
    background: #292929;
    padding: 2em 1em;
    border-radius: .3em;
    overflow-x: scroll;
}

.line-number {
    display: none;
}

.line {
    white-space: pre;
}

::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: none; 
}

::-webkit-scrollbar-thumb {
    background: #888; 
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: #F7A41D; 
}

@keyframes blink{
    0% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@media (max-width: 768px) {
    .content {
        max-width: 90%;
    }

    .menu {
        background: none;
        position: static;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        align-content: center;
        opacity: 1;
    }

    img {
        width: 100%;
    }

}

@media (prefers-color-scheme: dark) {
    *{
        color: <% opt.style.white_text %>;
    }

    body {
        background-color: <% opt.style.dark_background %>; 
    }

    .menu {
        background: <% opt.style.dark_menu_background %>;
    }

    .menu a {
        color: <% opt.style.white_text %>;
    }

    .article:hover, project:hover {
        background: <% opt.style.dark_sub_background %>;
    }
